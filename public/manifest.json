{
    "manifest_version": 3,
    "name": "Background Color Update",
    "version": "1.0",
    "description": "A Chrome extension to update the background color of the current page.",
    "icons": {
        "32": "icon.png"
    },
    "action": {
        "default_title": "Change background color",
        "default_popup": "index.html"
    },
    "permissions": [
        "scripting"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ]
}